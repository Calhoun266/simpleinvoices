<?xml version="1.0" encoding="ISO-8859-1" standalone="no"?>
<!DOCTYPE REPORT SYSTEM "PHPReport.dtd">
<REPORT>
	<TITLE>Sales Report by Customer</TITLE>
	<BACKGROUND_COLOR>#FFFFFF</BACKGROUND_COLOR>
	<CSS></CSS>
   <PAGE BORDER="1" SIZE="2500" CELLSPACING="0" CELLPADDING="5" WIDTH="500">
      <HEADER>
		<ROW>
            <COL COLSPAN="5" CELLCLASS="PAGE_LAYER" TEXTCLASS="BOLD">Sales in total by Customer</COL>
		</ROW>
		<ROW>
            <COL CELLCLASS="PAGE_LAYER" TEXTCLASS="BOLD">Customer</COL>
            <COL CELLCLASS="PAGE_LAYER" TEXTCLASS="BOLD">Sales</COL>
		</ROW>
      </HEADER>		
      <FOOTER>
		<ROW>
            <COL ALIGN="RIGHT" COLSPAN="4" CELLCLASS="PAGE_LAYER">Page Total</COL>
            <COL ALIGN="RIGHT" NUMBERFORMATEX="2" CELLCLASS="PAGE_LAYER" TEXTCLASS="BOLD" TYPE="EXPRESSION">$this->getSum("SUM_TOTAL")</COL>
		</ROW>
      </FOOTER>		
   </PAGE>
	<GROUPS>
      <GROUP NAME="customergroup" >
			<FIELDS>
				<ROW>
					<COL TYPE="FIELD" CELLCLASS="GROUP_LAYER">Customer</COL>
					<COL TYPE="FIELD" CELLCLASS="GROUP_LAYER">SUM_TOTAL</COL>
				</ROW>
			</FIELDS>
		</GROUP>
	</GROUPS>
</REPORT>

