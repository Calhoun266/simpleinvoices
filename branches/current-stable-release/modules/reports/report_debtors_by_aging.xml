<?xml version="1.0" encoding="ISO-8859-1" standalone="no"?>
<!DOCTYPE REPORT SYSTEM "PHPReport.dtd">
<REPORT>
	<TITLE>Sales Report</TITLE>
   <BACKGROUND_COLOR>#FFFFFF</BACKGROUND_COLOR>
<!--   <CSS>phpreports.css</CSS> -->
   <PAGE BORDER="1" SIZE="2500" CELLSPACING="0" CELLPADDING="5" ALIGN="CENTER" WIDTH="800">
      <HEADER>
			<ROW>
				<COL COLSPAN="8" CELLCLASS="PAGE_LAYER" TEXTCLASS="BOLD">Debtor invoices ordered by aging</COL>
			</ROW>
      </HEADER>		
      <FOOTER>
         <ROW>
            <COL ALIGN="RIGHT" COLSPAN="5" CELLCLASS="PAGE_LAYER">Total Owed</COL>
            <COL ALIGN="LEFT" COLSPAN="3" NUMBERFORMATEX="2" CELLCLASS="PAGE_LAYER" TEXTCLASS="BOLD" TYPE="EXPRESSION">$this->getSum("INV_OWING")</COL>
         </ROW>
      </FOOTER>		
   </PAGE>
	<GROUPS>
      <GROUP NAME="Aginggroup" EXPRESSION="Aging">
         <HEADER>
            <ROW>
               <COL CELLCLASS="PAGE_LAYER" TEXTCLASS="BOLD" TYPE="EXPRESSION" COLSPAN="8">"Aging: " . $this->getValue("Aging")</COL>
            </ROW>
            <ROW>
                <COL  CELLCLASS="PAGE_LAYER">id</COL>
                <COL  CELLCLASS="PAGE_LAYER">Biller</COL>
                <COL  CELLCLASS="PAGE_LAYER">Customer</COL>
                <COL  CELLCLASS="PAGE_LAYER">Total</COL>
                <COL  CELLCLASS="PAGE_LAYER">Paid</COL>
                <COL  CELLCLASS="PAGE_LAYER">Owing</COL>
                <COL  CELLCLASS="PAGE_LAYER">Date</COL>
                <COL  CELLCLASS="PAGE_LAYER">Age</COL>
            </ROW>
         </HEADER>
         <FOOTER>
            <ROW>
               <COL ALIGN="RIGHT" COLSPAN="5" CELLCLASS="GROUP_LAYER">Sum</COL>
               <COL ALIGN="LEFT" COLSPAN="3" CELLCLASS="GROUP_LAYER" TEXTCLASS="BOLD" NUMBERFORMATEX="2" TYPE="EXPRESSION">$this->getSum("INV_OWING")</COL>
            </ROW>
         </FOOTER>
			<FIELDS>
				<ROW>
					<COL TYPE="FIELD" CELLCLASS="GROUP_LAYER">id</COL>
					<COL TYPE="FIELD" CELLCLASS="GROUP_LAYER">Biller</COL>
					<COL TYPE="FIELD" CELLCLASS="GROUP_LAYER">Customer</COL>
					<COL TYPE="FIELD" CELLCLASS="GROUP_LAYER" NUMBERFORMATEX="2">INV_TOTAL</COL>
					<COL TYPE="FIELD" CELLCLASS="GROUP_LAYER" NUMBERFORMATEX="2">INV_PAID</COL>
					<COL TYPE="FIELD" CELLCLASS="GROUP_LAYER" NUMBERFORMATEX="2">INV_OWING</COL>
					<COL TYPE="FIELD" CELLCLASS="GROUP_LAYER">Date</COL>
					<COL TYPE="FIELD" CELLCLASS="GROUP_LAYER">Age</COL>
				</ROW>
			</FIELDS>
		</GROUP>
	</GROUPS>
</REPORT>
