<?xml version="1.0" encoding="ISO-8859-1" standalone="no"?>

<REPORT>
<TITLE>Sales Report</TITLE>
<BACKGROUND_COLOR>#FFFFFF</BACKGROUND_COLOR>
<CSS>phpreports.css</CSS>

	<PAGE BORDER="1" SIZE="2500" CELLSPACING="0" CELLPADDING="5" WIDTH="500">

	<HEADER>

	<ROW>
<COL COLSPAN="4" CELLCLASS="PAGE_LAYER" TEXTCLASS="BOLD">Products Sold - Group by Customer - Total</COL>
</ROW>
</HEADER>

	<FOOTER>

	<ROW>
<COL ALIGN="RIGHT" COLSPAN="3" CELLCLASS="PAGE_LAYER">page total</COL>
<COL ALIGN="LEFT" NUMBERFORMATEX="2" CELLCLASS="PAGE_LAYER" TEXTCLASS="BOLD" TYPE="EXPRESSION">$this->getSum("sum(si_invoice_items.inv_it_quantity)")</COL>
</ROW>
</FOOTER>
</PAGE>

	<GROUPS>

	<GROUP NAME="citygroup" EXPRESSION="c_name">

	<HEADER>

	<ROW>
<COL CELLCLASS="GROUP_LAYER">c_name</COL>
<COL CELLCLASS="GROUP_LAYER" TEXTCLASS="BOLD" TYPE="EXPRESSION" COLSPAN="3">$header->getValue("c_name")</COL>
</ROW>

	<ROW>
<COL CELLCLASS="GROUP_LAYER">prod_description</COL>
<COL CELLCLASS="GROUP_LAYER">sum(si_invoice_items.inv_it_quantity)</COL>
</ROW>
</HEADER>

	<FOOTER>

	<ROW>
<COL ALIGN="RIGHT" COLSPAN="3" CELLCLASS="GROUP_LAYER">total</COL>
<COL ALIGN="LEFT" CELLCLASS="GROUP_LAYER" TEXTCLASS="BOLD" NUMBERFORMATEX="2" TYPE="EXPRESSION">$this->getSum("sum(si_invoice_items.inv_it_quantity)")</COL>
</ROW>
</FOOTER>

	<FIELDS>

	<ROW>
<COL TYPE="FIELD" CELLCLASS="GROUP_LAYER" >prod_description</COL>
<COL TYPE="FIELD" CELLCLASS="GROUP_LAYER" NUMBERFORMATEX="2">sum(si_invoice_items.inv_it_quantity)</COL>
</ROW>
</FIELDS>
</GROUP>
</GROUPS>
</REPORT>
